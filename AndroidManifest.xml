<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fungameavs1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    
    
    <application
              android:name="com.fungameavs1.GlobalClass"
              android:allowBackup="true"
              android:icon="@drawable/bg1"
              android:label="@string/app_name"
    >
              <activity
            android:name="com.fungameavs1.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
   
        <activity
            android:name="com.fungameavs1.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.fungameavs1.FunTargetActivity"
            android:label="@string/title_activity_fun_target"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.FUNTARGET" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
        <activity
            android:name="com.fungameavs1.FunRouletteActivity"
            android:label="@string/title_activity_fun_roulette"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.FUNROULETTE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
    